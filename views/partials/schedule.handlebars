<section id="schedule">
  <div class="container">
    <!-- Title & Subtitle -->
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2 class="text-center"><span>Schedule</span></h2>
          <p class="subtitle text-center">Upcoming talks</p>
        </div>
      </div>
    </div>
    <!-- /.Title & Subtitle -->
    <!-- Timeline -->
    <div id="timeline">
      {{#forEach smallSchedule}}
        {{#if valid}}
          <!-- Timeline Item -->
          <div class="timeline-item">
            <div class="timeline-icon"> <i class="fa fa-star fa-lg"></i> </div>
            <div class="timeline-content {{#ifEven index}}right{{/ifEven}}">
              <div class="text-center text-bold mrgn-20-btm">
                {{#each speakers}}
                <div class="inline-block">
                  <img src="/media/images/transparent.png" data-lazy="{{image}}" alt="{{full_public_name}}" class="img-responsive center-block img-circle img-speaker">
                  {{full_public_name}}
                </div>
                {{/each}}
              </div>
              <p class="text-big text-center text-bold time">{{format_start_time}}</p>
              <h2>{{title}}</h2>
              <p>{{abstract}}</p>
              <span class="label label-main">{{room.name}}</span> </div>
          </div>
          <!-- /.Timeline Item -->
        {{/if}}
      {{/forEach}}

      <!-- Timeline Full Schedule Link -->
      <div class="timeline-item">
        <div class="timeline-icon"> <a href="/schedule"><i class="fa fa-angle-double-down fa-2x"></i></a> </div>
      </div>
      <!-- /.Timeline Full Schedule Link -->
    </div>
    <!-- /.Timeline -->

    <div class="row text-center mrgn-80-top">
      <a href="/schedule" class="btn btn-main-color">See full schedule</a>
    </div>
  </div>
  <!-- /.container -->
</section>
